{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "messages": {
        "$i18n": "locales.yml"
    },
    "title": {
        "$ref": "#/messages/deploy.title"
    },
    "description": {
        "$ref": "#/messages/deploy.description"
    },
    "longDescription": {
        "$ref": "#/messages/deploy.longDescription"
    },
    "type": "object",
    "properties": {
        "prod-region": {
            "description": "The bluemix region",
            "type": "string"
        },
        "prod-organization": {
            "description": "The bluemix org",
            "type": "string"
        },
        "prod-space": {
            "description": "The bluemix space",
            "type": "string"
        },
        "prod-app-name": {
            "description": {
                "$ref": "#/messages/deploy.appDescription"
            },
            "type": "string",
            "pattern": "\\S"
        },
        "aif-url": {
            "description": {
                "$ref": "#/messages/deploy.aifURLDescription"
            },
            "type": "string",
            "pattern": "\\S"
        },
        "cloudant-url": {
            "description": {
                "$ref": "#/messages/deploy.cloudantURLDescription"
            },
            "type": "string",
            "pattern": "\\S"
        },
        "jmeter-path": {
            "description": {
                "$ref": "#/messages/deploy.jmeterPathDescription"
            },
            "type": "string",
        }
    },
    "required": [
        "prod-region",
        "prod-organization",
        "prod-space",
        "prod-app-name",
        "cloudant-url",
        "aif-url"
    ],
    "form": [
        {
            "type": "validator",
            "url": "/devops/setup/bm-helper/helper.html"
        },{
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.aifAppName"
            },
            "key": "aif-app-name"
        },{
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.aifURL"
            },
            "key": "aif-url"
        },{
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.cloudantURL"
            },
            "key": "cloudant-url"
        },{
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.jmeterPath"
            },
            "key": "jmeter-path"
        },{
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.gitBranchName"
            },
            "key": "git-branch-name"
        },{
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.stubAppName"
            },
            "key": "stub-app-name"
        },{
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.stubAppURL"
            },
            "key": "stub-app-url"
        },{
            "type": "table",
            "columnCount": 4,
            "widths": [
                "15%",
                "28%",
                "28%",
                "28%"
            ],
            "items": [
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/region"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/organization"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/space"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/prodStage"
                    }
                },
                {
                    "type": "select",
                    "key": "prod-region"
                },
                {
                    "type": "select",
                    "key": "prod-organization"
                },
                {
                    "type": "select",
                    "key": "prod-space",
                    "readonly": false
                }
            ]
        }
    ]
}
